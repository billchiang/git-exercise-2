<h1>User List</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Role</td>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td>
        <% if user.is_admin? %>
           Admin
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>